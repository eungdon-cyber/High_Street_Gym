<!DOCTYPE html>
<html lang="en-AU">
<head>
    <title>Login - High Street Gym</title>
    <%- include("partials/head.ejs") %>
</head>
<body>
    <main>
        <%- include("partials/header.ejs") %>

        <!-- Login Hero Section -->
        <section class="hero-section">
            <div class="hero-container">
                <div class="hero-content">
                    <div class="hero-text">
                        <h2 class="hero-title">Welcome to High Street Gym</h2>
                        <p class="hero-subtitle">Please log in to access your account</p>
                        
                        <!-- Login Form -->
                        <form action="/authenticate/login" method="post" class="login-form">
                            <div class="form-group">
                                <label for="email">Email Address:</label>
                                <input
                                    type="email"
                                    name="email"
                                    id="email"
                                    required
                                    placeholder="Enter your email"
                                />
                            </div>
                            
                            <div class="form-group">
                                <label for="password">Password:</label>
                                <input
                                    type="password"
                                    name="password"
                                    id="password"
                                    required
                                    placeholder="Enter your password"
                                />
                            </div>
                            
                            <button type="submit" class="hero-cta">Login</button>
                        </form>
                        
                        <div class="login-links">
                            <p>Don't have an account? <a href="/users/register" class="login-link">Register here</a></p>
                        </div>
                    </div>
                    <div class="hero-image">
                        <img src="/img/login.jpg" alt="High Street Gym Login" class="hero-img">
                    </div>
                </div>
            </div>
        </section>

        <%- include("partials/footer.ejs") %>
    </main>
</body>
</html>
